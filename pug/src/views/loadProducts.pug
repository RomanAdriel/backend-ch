doctype html
html(lang="en")
  head
      title Desafio 5 (Pug)
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
      link(rel="stylesheet" href="./styles.css")
  body
      div.container.m-5
        h1 Products Loader
        form(action="/productos", method="POST")
          div.input-group.m-3
            span.input-group-text Name
            input(type="text", placeholder="Name", name="title").form-control
          div.input-group.m-3
            span.input-group-text Price
            input(type="number", placeholder="Price", name="price").form-control
          div.input-group.m-3
            span.input-group-text Thumbnail
            input(type="text", placeholder="Thumbnail URL", name="thumbnail").form-control
          button(type="submit").btn.btn-dark Add Product
          a(href="/productos", role="button").btn.btn-dark Products List
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")